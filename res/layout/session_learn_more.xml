<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/learn_more_scrollView"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true"
    android:scrollbars="vertical" >

    <RelativeLayout
        android:id="@+id/learn_more_relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/ucb_grey1" >

        <TextView
            android:id="@+id/learn_more_textView0"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:paddingLeft="10dp"
            android:text="Some information you might be interested:"
            android:textSize="14sp" />

        <RelativeLayout
            android:id="@+id/learn_more_relativeLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/learn_more_textView0"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/white" >

            <TextView
                android:id="@+id/learn_more_textView1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:alpha="0.9"
                android:background="@color/ucb_blue1"
                android:paddingBottom="10dp"
                android:paddingLeft="20dp"
                android:paddingTop="10dp"
                android:text="Webinars"
                android:textColor="@color/white"
                android:textStyle="bold" />

            <ListView
                android:id="@+id/learn_more_webinar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/learn_more_textView1"
                android:layout_marginBottom="10dp" >
            </ListView>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/learn_more_relativeLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/learn_more_relativeLayout1"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:background="@color/white" >

            <TextView
                android:id="@+id/learn_more_textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:alpha="0.9"
                android:background="@color/ucb_blue1"
                android:paddingBottom="10dp"
                android:paddingLeft="20dp"
                android:paddingTop="10dp"
                android:text="Papers"
                android:textColor="@color/white"
                android:textStyle="bold" />

            <ListView
                android:id="@+id/learn_more_paper"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/learn_more_textView2"
                android:layout_marginBottom="10dp" >
            </ListView>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/learn_more_relativeLayout3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/learn_more_relativeLayout2"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:background="@color/white" >

            <TextView
                android:id="@+id/learn_more_textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:alpha="0.9"
                android:background="@color/ucb_blue1"
                android:paddingBottom="10dp"
                android:paddingLeft="20dp"
                android:paddingTop="10dp"
                android:text="Websites"
                android:textColor="@color/white"
                android:textStyle="bold" />

            <ListView
                android:id="@+id/learn_more_website"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/learn_more_textView3"
                android:layout_marginBottom="10dp" >
            </ListView>
        </RelativeLayout>
    </RelativeLayout>

</ScrollView>