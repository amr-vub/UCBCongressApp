<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ucb_grey1" >

    <TextView
        android:id="@+id/anony_survey_header_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="20dp"
        android:text="Help us provide just the right information for you!"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/ucb_black"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/anony_survey2_textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/anony_survey_header_1"
        android:layout_alignRight="@+id/anony_survey_header_1"
        android:layout_below="@+id/anony_survey_header_1"
        android:layout_marginTop="10dp"
        android:text="What is your profession?"
        android:textColor="@color/ucb_black"
        android:textSize="18sp"
        android:textStyle="bold|italic" />

    <GridLayout
        android:id="@+id/gridLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/anony_survey2_textView1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="31dp"
        android:alpha="0.75"
        android:columnCount="2"
        android:rowCount="2" >

        <Button
            android:id="@+id/anony_survey_doctor"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_column="0"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:layout_row="1"
            android:background="@color/ucb_blue1"
            android:text="Doctor"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <Button
            android:id="@+id/anony_survey_phd"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_column="1"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:layout_row="0"
            android:background="@color/ucb_blue1"
            android:text="PhD"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <Button
            android:id="@+id/anony_survey_pharma"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_column="1"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_row="1"
            android:background="@color/ucb_blue1"
            android:text="Pharmacist"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <Button
            android:id="@+id/anony_survey_nurse"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_column="0"
            android:layout_gravity="left|top"
            android:layout_row="0"
            android:background="@color/ucb_blue1"
            android:gravity="center_vertical|center_horizontal"
            android:text="Nurse"
            android:textColor="@color/white"
            android:textSize="20sp" />

    </GridLayout>

</RelativeLayout>