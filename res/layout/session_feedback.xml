<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ucb_grey1" >

    <RelativeLayout
        android:id="@+id/feedback_relativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="10dp"
        android:background="@color/white" >

        <TextView
            android:id="@+id/feedback_textView1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="10dp"
            android:text="How much of the information that you needed did you get from this session?"
            android:textColor="@color/ucb_black"
            android:textSize="14sp" />

        <RatingBar
            android:id="@+id/feedback_ratingBar1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/feedback_textView1"
            android:layout_centerHorizontal="true"
            android:numStars="5"
            android:stepSize="0.5" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/feedback_textView1"
            android:layout_below="@+id/feedback_ratingBar1"
            android:gravity="center"
            android:text="Hmm... \nNot much"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/feedback_ratingBar1"
            android:layout_below="@+id/feedback_ratingBar1"
            android:gravity="center"
            android:text="Quite \na lot!"
            android:textSize="10sp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/feedback_relativeLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/feedback_relativeLayout1"
        android:layout_alignRight="@+id/feedback_relativeLayout1"
        android:layout_below="@+id/feedback_relativeLayout1"
        android:layout_marginTop="10dp"
        android:background="@color/white" >

        <TextView
            android:id="@+id/feedback_textView2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="10dp"
            android:text="To what extent is this session related to your field of study?" />

        <RatingBar
            android:id="@+id/feedback_ratingBar2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/feedback_textView2"
            android:layout_centerHorizontal="true"
            android:numStars="5"
            android:stepSize="0.5" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/feedback_textView2"
            android:layout_below="@+id/feedback_ratingBar2"
            android:gravity="center"
            android:text="Not\nrelated"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/feedback_ratingBar2"
            android:layout_below="@+id/feedback_ratingBar2"
            android:gravity="center"
            android:text="Closely\nrelated"
            android:textSize="10sp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/feedback_relativeLayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/feedback_relativeLayout2"
        android:layout_alignRight="@+id/feedback_relativeLayout2"
        android:layout_below="@+id/feedback_relativeLayout2"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:paddingBottom="10dp" >

        <TextView
            android:id="@+id/feedback_textView3"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="10dp"
            android:text="Would you like to attend similar sessions in the future?" />

        <RadioGroup
            android:id="@+id/feedback_radioGroup1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/feedback_textView3"
            android:layout_alignRight="@+id/feedback_textView3"
            android:layout_below="@+id/feedback_textView3"
            android:orientation="vertical"
            android:weightSum="2" >

            <RadioButton
                android:id="@+id/radio0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:checked="true"
                android:text="Yes! Tell me whenever there is one!"
                android:textSize="12sp" />

            <RadioButton
                android:id="@+id/radio1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Hmm...No, I&apos;d rather not be bothered..."
                android:textSize="12sp" />

        </RadioGroup>

    </RelativeLayout>

    <Button
        android:id="@+id/feedback_button1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:alpha="0.9"
        android:background="@color/ucb_blue1"
        android:text="Submit"
        android:textColor="@color/white" />

</RelativeLayout>