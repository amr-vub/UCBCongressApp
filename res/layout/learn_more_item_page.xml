<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ucb_grey1" >

    <TextView
        android:id="@+id/session_detail_title"
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/white"
        android:gravity="bottom"
        android:paddingBottom="5dp"
        android:paddingLeft="10dp"
        android:paddingRight="6dp"
        android:paddingTop="16dp"
        android:text="Item name"
        android:textAllCaps="false"
        android:textSize="20sp"
        android:textStyle="bold" />

    <RelativeLayout
        android:id="@+id/session_detail_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/session_detail_title"
        android:layout_alignRight="@+id/session_detail_title"
        android:layout_below="@id/session_detail_title"
        android:background="@color/ucb_grey1" >

        <TextView
            android:id="@+id/learn_more_text1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="9:00-10:00" />

        <TextView
            android:id="@+id/learn_more_text2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/learn_more_text1"
            android:layout_alignRight="@+id/learn_more_text1"
            android:layout_below="@id/learn_more_text1"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="Room 501" />

        <TextView
            android:id="@+id/learn_more_text3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/learn_more_text2"
            android:layout_alignRight="@+id/learn_more_text2"
            android:layout_below="@id/learn_more_text2"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="John Doe" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/session_detail_info"
        android:layout_alignRight="@+id/session_detail_info"
        android:layout_below="@id/session_detail_info" >

        <TextView
            android:id="@+id/text_abstract"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/title_abstract"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/title_abstract"
            android:layout_marginTop="10dp"
            android:paddingLeft="10dp"
            android:text="This session mainly focuses on..." />

        <TextView
            android:id="@+id/title_abstract"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="14dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="Overview"
            android:textSize="16sp"
            android:textStyle="bold" />

    </RelativeLayout>

</RelativeLayout>