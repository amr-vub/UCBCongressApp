<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/learn_more_text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="50dp"
        android:text="I would like to receive info:"
        android:textColor="@color/ucb_blue2"
        android:textSize="20sp" />

    <SeekBar
        android:id="@+id/cong_frequency_bar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/learn_more_text1"
        android:layout_below="@id/learn_more_text1"
        android:layout_margin="10dp"
        android:max="4"
        android:progress="1"
        android:secondaryProgress="0" />

    <LinearLayout
        android:id="@+id/cong_frequency_bar_text"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/cong_frequency_bar"
        android:layout_below="@id/cong_frequency_bar"
        android:orientation="horizontal"
        android:visibility="visible"
        android:weightSum="10" >
        
        <TextView  
            android:id="@+id/cong_frequency_0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center_horizontal"
            android:text="Never"/>

        <TextView
            android:id="@+id/cong_frequency_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center_horizontal"
            android:text="daily" />

        <TextView
            android:id="@+id/cong_frequency_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center_horizontal"
            android:text="weekly" />

        <TextView
            android:id="@+id/cong_frequency_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center_horizontal"
            android:text="biweekly" />

        <TextView
            android:id="@+id/cong_frequency_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center_horizontal"
            android:text="monthly" />
    </LinearLayout>

    <TextView
        android:id="@+id/learn_more_text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/learn_more_text1"
        android:layout_below="@id/cong_frequency_bar_text"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:text="I would like to receive by:"
        android:textSize="20sp" />

    <CheckBox
        android:id="@+id/cong_checkBox1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/learn_more_text2"
        android:layout_below="@id/learn_more_text2"
        android:text="Email newsletters" />

    <CheckBox
        android:id="@+id/cong_checkBox2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/cong_checkBox1"
        android:layout_below="@id/cong_checkBox1"
        android:text="Phone calls" />

    <CheckBox
        android:id="@+id/cong_checkBox3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/cong_checkBox2"
        android:layout_alignLeft="@id/cong_checkBox2"
        android:text="Text messages" />

    <CheckBox
        android:id="@+id/cong_checkBox4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/cong_checkBox3"
        android:layout_alignLeft="@id/cong_checkBox3"
        android:text="Post" />

</RelativeLayout>